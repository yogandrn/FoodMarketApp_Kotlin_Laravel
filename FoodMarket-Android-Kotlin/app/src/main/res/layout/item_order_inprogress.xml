<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="20dp"
    android:layout_marginVertical="5dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_food_inprogress"
            android:scaleType="centerCrop"
            android:background="@color/silver"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/title_food_inprogress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_500"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="..." />

        <TextView
            android:id="@+id/detail_food_inprogress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_500"
            android:textColor="@color/grey60"
            android:textSize="14sp"
            tools:text="... items - Rp ..." />
    </LinearLayout>

    <TextView
        android:id="@+id/status_inprogress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:text="On Delivery"
        android:maxLines="2"
        android:fontFamily="@font/poppins_400_italic"
        android:textColor="@color/grey60"
        android:textAlignment="center"
        android:textSize="13sp" />

</LinearLayout>