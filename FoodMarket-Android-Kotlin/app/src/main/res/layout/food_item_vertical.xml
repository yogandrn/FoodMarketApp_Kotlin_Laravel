        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image_food_vertical"
                    android:scaleType="centerCrop"
                    android:background="@color/silver"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_food_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_500"
                    android:text="..."
                    android:maxLines="2"
                    android:textColor="@color/grey40"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/price_food_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Rp ..."
                    android:fontFamily="@font/poppins_500"
                    android:textSize="15sp"
                    android:textColor="@color/primaryColor"
                    app:layout_constraintStart_toEndOf="@+id/image_food_vertical"
                    app:layout_constraintTop_toBottomOf="@+id/title_food_vertical" />
        </LinearLayout>


        <RatingBar
            android:id="@+id/detail_rate"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="4dp"
            android:theme="@style/RatingBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

</androidx.cardview.widget.CardView>