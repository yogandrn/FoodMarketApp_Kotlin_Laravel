<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodMarketKotlin" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.FoodMarketKotlin.noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView"/>

    <style name="TextView.titleToolbarStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.subtitleToolbarStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_400</item>
        <item name="android:textColor">@color/grey81</item>
    </style>

    <style name="Widget.Support.CoordinatorLayout" parent="android:Widget">
        @null
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Tab" >
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_500</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RatingBar" >
        <item name="colorControlNormal">#C5C5C5</item>
        <item name="colorControlActivated">#FFC700</item>
    </style>

</resources>